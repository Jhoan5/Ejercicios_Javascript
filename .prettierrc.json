{
  "insertPragma": false,
  "requirePragma": false,
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 120,
        "endOfLine": "crlf",
        "tabWidth": 2,
        "useTabs": false
      }
    },
    {
      "files": "*.js",
      "options": {
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": true,
        "trailingComma": "all",
        "bracketSpacing": true,
        "semi": false,
        "arrowParens": "always"
      }
    }
  ],
  "ignorePath": ".prettierignore",
  "editor.formatOnSave": true
}
